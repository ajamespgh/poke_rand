{% endblock %}
{% block title %}Search{% endblock %}
{% block content %}
<div class="container">
    <form method="POST" action="/search">
        <div class="form-group row">
            <div class="col-sm">
                <label for="lookupType">Type</label>
                <select class="form-control" name="lookupType" id="lookupType">
                    <option value="poke">Pok√©mon</option>
                </select>
            </div>
